@model InterviewTest.Models.Building
@{
    ViewBag.Title = "Add new Building";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />

<form action="/insert/insertbuilding" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProductName">Building Name</label>
            <input type="text" class="form-control" id="Building1" name="Building1" placeholder="Building Name">
            @Html.ValidationMessageFor(temp => temp.Building1)
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Add</button>
</form>

@if (ViewBag.message != null)
{
    <script>alert('@ViewBag.message')</script>
}

